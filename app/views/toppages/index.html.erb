<h1 class='text-center'>自分の単語帳一覧</h1>
<%= link_to '単語帳新規作成', new_wordlist_path, class: 'btn btn-lg btn-primary' %>

<ul>
    <% @wordlists.each do |wordlist| %>
    <div class='card' style="margin: 15px;">
        <div class='card-body text-center'>
            <%= wordlist.name %>
            <% if current_user == wordlist.user %>
            
                <%= link_to "削除", wordlist, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            
            <% end %>
        </div>
    </div>
    <% end %>
</ul>

